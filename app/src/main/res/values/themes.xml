<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PeerBridge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_600</item>
        <item name="colorOnPrimary">?android:textColorPrimaryInverse</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue_500</item>
        <item name="colorSecondaryVariant">@color/light_blue_600</item>
        <item name="colorOnSecondary">?android:textColorPrimary</item>

        <!-- Text color. -->
        <item name="android:textColorPrimary">@color/material_grey_850</item>
        <item name="android:textColorPrimaryDisableOnly">@color/material_grey_800</item>
        <item name="android:textColorPrimaryInverse">@color/material_grey_100</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/material_grey_300</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="Theme.PeerBridge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PeerBridge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PeerBridge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
